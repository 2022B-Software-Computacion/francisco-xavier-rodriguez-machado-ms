        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="#26501D"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="26dp"
